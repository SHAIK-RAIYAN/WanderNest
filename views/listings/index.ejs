<!-- This shows all hotel listings from db -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WanderNest Listings</title>
    <link rel="stylesheet" href="styles.css" />
  </head>

  <body>
    <div class="container">
      <div class="add-btn">
        <a href="/listings/new" class="btn">+ Add New Listing</a>
      </div>
      <h1>All Listings</h1>
      <ul>
        <% alllistings.forEach(listing => { %>
        <li>
          <a href="/listings/<%= listing._id %>"><%= listing.title %></a>
        </li>
        <% }); %>
      </ul>
    </div>
  </body>
</html>
